<Window x:Class="FileManager.View.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.View"
        mc:Ignorable="d"
        Title="Manager" Height="600" Width="900">
    <Grid x:Name="OuterGrid">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="36"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="ManagerGrid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--Display the  left side pane -->
            <local:Pane x:Name="LeftPane" Grid.Column="0" Grid.Row="0" PreviewMouseLeftButtonDown="LeftPane_PreviewMouseLeftButtonDown"></local:Pane>

            <!-- Pane splitter-->
            <GridSplitter Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" Width="3" Background="Gray"/>

            <!--Display the right side pane-->
            <local:Pane x:Name="RightPane"  Grid.Column="1" Grid.Row="0"  PreviewMouseLeftButtonDown="RightPane_PreviewMouseLeftButtonDown" ></local:Pane>
        </Grid>
        <Label x:Name="label_Copy" Content="F6 Move" HorizontalAlignment="Left" Margin="70,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="56" RenderTransformOrigin="1.589,0.462"/>
        <Label x:Name="label_Copy2" Content="F7 Create" HorizontalAlignment="Left" Margin="137,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="72"/>
        <Label x:Name="label_Copy3" Content="F8 Delete" HorizontalAlignment="Left" Margin="215,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="72"/>
        <Label x:Name="label_Copy5" Content="F9 Details" HorizontalAlignment="Left" Margin="294,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="72"/>
        <Label x:Name="label_Copy6" Content="F5 Copy" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="56" RenderTransformOrigin="1.589,0.462"/>
    </Grid>
</Window>
